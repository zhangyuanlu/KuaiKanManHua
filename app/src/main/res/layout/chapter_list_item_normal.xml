<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="97dp">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C0C0C0"
        android:layout_alignParentTop="true"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_chapter"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        fresco:placeholderImage="@drawable/item_placeholder" />

    <TextView
        android:id="@+id/tv_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/view"
        android:layout_toEndOf="@+id/sdv_chapter"
        android:layout_toStartOf="@+id/tv_chapter_index"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="第一话哈哈中" />


    <TextView
        android:id="@+id/tv_chapter_index"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_below="@+id/view"
        android:layout_toStartOf="@+id/tv_chapter_time"
        android:drawableStart="@drawable/praise"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="52万" />

    <TextView
        android:id="@+id/tv_chapter_time"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_below="@+id/view"
        android:layout_marginTop="5dp"
        android:text="08-21"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>